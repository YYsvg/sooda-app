<div class="admin-box">
  <div class="box-inner">

<h2>管理者専用アカウント作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admin/shared/error_messages", resource: resource %>

  <div class="box-name">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="box-email">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :role, "区分" %><br />
    <%= f.select :role, [['管理者',1],['ユーザー',0]], { prompt: "選択してください" } %>
  </div>

  <div class="box-password">
    <%= f.label :password, "パスワードを入力してください" %>
    <% if @minimum_password_length %>
    <em>半角数字(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="box-password">
    <%= f.label :password_confirmation, "確認のためもう一度パスワードを入力してください" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="box-admin-login">
    <%= f.submit "新規作成" %>
  </div>
<% end %>
