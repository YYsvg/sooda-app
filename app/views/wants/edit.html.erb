<div class="mx-auto" style="width: 300px;">
  <% pagename = "やりたいことの編集画面" %>
  <h1><%= pagename %></h1>

  <%= form_with model: @want, local: true do |f| %>
  
    <div>
      <%= f.label :memo,"メモ" %>
      <%= f.text_field :memo %>
    </div>

    <div>
      <%= f.label :image,"写真" %>
      <%= f.file_field :image %>
    </div>

    <div><%= f.submit "入力する" %></div>
  <% end %>