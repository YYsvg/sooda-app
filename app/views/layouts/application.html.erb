<!DOCTYPE html>
<html>
  <head>
    <title>おうちアプリ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main>
      <%= render 'layouts/header' %>
      <% if flash.notice %>
        <p><%= flash.notice %></p>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </main>
  </body>
</html>
