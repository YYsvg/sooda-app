<div class="edit">
<% pagename = "編集" %>
<h1><%= pagename %></h1><br>

  <%= form_with model: @outcome, local: true do |f| %>
    <div>
      <label>金額　</label><%= f.number_field :price %>
    </div>
    <br>
    <div>
      <label>メモ　 </label><%= f.text_field :memo %>
    </div>
    <br><br>
    <div>
      <%= f.radio_button(:outcome_category_id, 1) %>
      <%= f.label :outcome_category_id, "食費", {value: 1, style: "display: inline-block;"} %>
    </div>
    <div>
      <%= f.radio_button(:outcome_category_id, 2) %>
      <%= f.label :outcome_category_id, "文房具", {value: 2, style: "display: inline-block;"} %>
    </div>
    <div>
      <%= f.radio_button(:outcome_category_id, 3) %>
      <%= f.label :outcome_category_id, "衣服", {value: 3, style: "display: inline-block;"} %>
    </div><br><br>
    <div>
      <%= f.label :image,"写真" %>
      <%= f.file_field :image %>
    </div>
    <br><br>
    <div>
      <%= f.submit "保存する", class:"submit-color edit-btn" %>
    </div>
  <% end %>
</div>
<br><br>